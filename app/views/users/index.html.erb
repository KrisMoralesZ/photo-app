<h1>Users</h1>

<div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Last Name</th>
      <th>Profile</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody id="usersTable">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= link_to "Show Profile", user_path(user), class: "btn btn-secondary" %></td>
        <td>
          <% if  current_user.following?(user) %>
            <%= button_to "Remove Friends List", follow_path(user), method: :delete, class: "btn btn-danger"%>
          <% else %>
            <%= button_to "Follow this user", follows_path(followed_id: user.id), method: :post, class: "btn btn-primary"%>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>