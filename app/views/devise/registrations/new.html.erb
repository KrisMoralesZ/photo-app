<div class="d-flex justify-content-center align-items-center">
  <div class="w-100" style="max-width: 400px;">
    <h1 class="text-center mb-4"><%= t('.sign_up') %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "cc_form" }) do |f| %>
      <%= bootstrap_devise_error_messages! %>
      <body data-stripe-key="<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>"/>

      <div class="form-group mt-4 mb-4">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class="form-group mt-4 mb-4">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

        <% if @minimum_password_length %>
          <small class="form-text text-muted">
            <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
          </small>
        <% end %>
      </div>

      <div class="form-group mt-4 mb-4">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class="form-group mt-4 mb-4">
        <label for="card-element">Credit or debit card</label>
        <div id="card-element" class="form-control">
        </div>
        <div id="card-errors" class="text-danger mt-2" role="alert"></div>
      </div>

      <div class="form-group mt-4 mb-4 d-flex justify-content-center align-items-center">
        <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>

<script>
    stripe.createToken(card).then(function(result) {
        if (result.error) {
            // Show error
        } else {
            // Append token to hidden input
            var form = document.getElementById('registration_form');
            var hiddenInput = document.createElement('input');
            hiddenInput.setAttribute('type', 'hidden');
            hiddenInput.setAttribute('name', 'payment[token]');
            hiddenInput.setAttribute('value', result.token.id);
            form.appendChild(hiddenInput);

            // Submit the form
            form.submit();
        }
    });
</script>